{
  "extends": "@dust-defi/dev/config/tsconfig.json",
  "exclude": ["build/**/*", "**/build/*", "**/build/**/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@dust-defi/extension": ["packages/extension/src"],
      "@dust-defi/extension/*": ["packages/extension/src/*"],
      "@dust-defi/extension-base": ["packages/extension-base/src"],
      "@dust-defi/extension-base/*": ["packages/extension-base/src/*"],
      "@dust-defi/extension-chains": ["packages/extension-chains/src"],
      "@dust-defi/extension-chains/*": ["packages/extension-chains/src/*"],
      "@dust-defi/extension-compat-metamask": ["packages/extension-compat-metamask/src"],
      "@dust-defi/extension-dapp": ["packages/extension-dapp/src"],
      "@dust-defi/extension-dapp/*": ["packages/extension-dapp/src/*"],
      "@dust-defi/extension-inject": ["packages/extension-inject/src"],
      "@dust-defi/extension-inject/*": ["packages/extension-inject/src/*"],
      "@dust-defi/extension-ui": ["packages/extension-ui/src"],
      "@dust-defi/extension-ui/*": ["packages/extension-ui/src/*"]
    },
    "skipLibCheck": true
  }
}
